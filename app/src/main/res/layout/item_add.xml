<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="20dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/addPic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/langing" />
<!--            <TextView-->
<!--                android:id="@+id/txtCID"-->
<!--                android:layout_width="100dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:gravity="center"-->
<!--                android:layout_weight="1"-->
<!--                android:textSize="30dp"-->
<!--                android:layout_margin="20dp"-->
<!--                android:text="1"-->
<!--                android:textAllCaps="false"-->
<!--                android:textColor="@color/red"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtFullNameA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gotabaya Rajapakse"
                    android:layout_margin="10dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    />

                <TextView
                    android:id="@+id/txtEmailA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="gota.rajapakse@gmail.com"
                    android:layout_marginStart="10dp"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    />

                <TextView
                    android:id="@+id/txtPhoneA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0711327510"
                    android:layout_marginStart="10dp"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    />

                <TextView
                    android:id="@+id/txtLocationA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Colombo"
                    android:layout_marginStart="10dp"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    />
                <TextView
                    android:id="@+id/txtAboutmeA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We have some cleaning job vacancies in this time period. Any person or organization can apply this."
                    android:layout_marginStart="10dp"
                    android:justificationMode="inter_word"
                    android:layout_marginEnd="10dp"
                    android:textStyle="normal"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    />
                <TextView
                    android:id="@+id/txtpkgnameA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apartment"
                    android:layout_marginStart="10dp"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:textColor="@color/red"
                    android:textAllCaps="false"
                    />
                <TextView

                    android:id="@+id/pkgPriceA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$ 450.0"
                    android:layout_marginStart="10dp"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:textColor="@color/red"
                    android:textAllCaps="false"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>