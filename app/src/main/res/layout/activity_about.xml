<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.About">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/mainlogo" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Why Our Cleaning Services"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                android:textSize="30dp"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A warm welcome to Adorn Service Sri Lanka. We provide professional Cleaning Services for House, Apartment, Office and commercial buildings. If you want a one-off deep cleaning for your apartment, office or house, adornservices.lk will offer a team of fully equipped cleaners near you"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textSize="15dp"
                android:textAllCaps="false"
                />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What we offer-Featured Services"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                android:textSize="25dp"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Customer support"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:elevation="10dp"
                app:cardCornerRadius="120dp"
                app:cardBackgroundColor="@color/lightgrey"
                >

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    app:srcCompat="@drawable/support" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Call at any time to get answers andprocess your reservations."
                android:textAllCaps="false"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:textSize="15dp"
                android:gravity="center"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flexible schedule"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:elevation="10dp"
                app:cardCornerRadius="120dp"
                app:cardBackgroundColor="@color/lightgrey"
                >

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    app:srcCompat="@drawable/schedule" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The crew can reach on workdays, weekends, and bank holidays."
                android:textAllCaps="false"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:textSize="15dp"
                android:gravity="center"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reliable cleaners"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:elevation="10dp"
                app:cardCornerRadius="120dp"
                app:cardBackgroundColor="@color/lightgrey"
                >

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    app:srcCompat="@drawable/diamond" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cleaning workers are protected and have received thorough training."
                android:textAllCaps="false"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:textSize="15dp"
                android:gravity="center"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spotless Home"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:elevation="10dp"
                app:cardCornerRadius="120dp"
                app:cardBackgroundColor="@color/lightgrey"
                >

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    app:srcCompat="@drawable/spotless" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enjoy a shiny home and provide your response for quality improvement."
                android:textAllCaps="false"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:textSize="15dp"
                android:gravity="center"
                android:textStyle="normal"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>