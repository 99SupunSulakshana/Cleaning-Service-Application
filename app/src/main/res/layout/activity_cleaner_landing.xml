<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CleanerLanding">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity=""
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:text="Happy"
                            android:textSize="40dp"
                            android:textColor="@color/pink"
                            android:fontFamily="sans-serif-smallcaps"/>

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:text="Cleaning"
                            android:textSize="25dp"
                            android:textColor="@color/purple"
                            android:fontFamily="sans-serif-smallcaps"/>

                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:text="Service"
                            android:textSize="20dp"
                            android:textColor="@color/purple"
                            android:fontFamily="sans-serif-smallcaps"/>

                        <TextView
                            android:id="@+id/textView24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:text="Happy services mobile application which includes cleaning, washing, painting, cooking, plumbing, and carpet cleaning services."
                            android:textSize="15dp"
                            android:textColor="@color/grey"
                            android:fontFamily="sans-serif-smallcaps"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="150dp"
                        android:layout_height="260dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="16dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="Cleaning logo"
                        android:scaleType="fitXY"
                        android:src="@drawable/langing"
                        android:transitionName="" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Which Service do you need?"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/lightblue"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="20dp"/>

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:rowCount="5"
                    app:columnCount="2"
                    android:layout_margin="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        app:layout_row="0"
                        app:layout_column="0"
                        app:layout_gravity="fill"
                        android:clickable="true"
                        android:id="@+id/jobCardC"
                        app:layout_rowWeight="1"
                        app:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical|center_horizontal">

                            <ImageView
                                android:id="@+id/imageViewC"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/sell"
                                android:layout_margin="10dp"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/textView19C"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jobs"
                                android:layout_margin="10dp"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:layout_gravity="center"
                                android:textColor="@color/purple"
                                android:textSize="15sp"
                                android:textStyle="normal"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        app:layout_row="0"
                        app:layout_column="1"
                        app:layout_gravity="fill"
                        android:clickable="true"
                        android:id="@+id/cleanersCard"
                        app:layout_rowWeight="1"
                        app:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical|center_horizontal">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/cleaners"
                                android:layout_margin="10dp"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/textView19"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cleaners"
                                android:layout_margin="10dp"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:layout_gravity="center"
                                android:textColor="@color/purple"
                                android:textSize="15sp"
                                android:textStyle="normal"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        app:layout_row="1"
                        app:layout_column="0"
                        app:layout_gravity="fill"
                        android:clickable="true"
                        android:id="@+id/cleanerProfilecard"
                        app:layout_rowWeight="1"
                        app:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical|center_horizontal">

                            <ImageView
                                android:id="@+id/cleanerpic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/profile"
                                android:layout_margin="10dp"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Profile"
                                android:layout_margin="10dp"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:layout_gravity="center"
                                android:textColor="@color/purple"
                                android:textSize="15sp"
                                android:textStyle="normal"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        app:layout_row="1"
                        app:layout_column="1"
                        app:layout_gravity="fill"
                        android:clickable="true"
                        android:id="@+id/cleanerAllUsers"
                        app:layout_rowWeight="1"
                        app:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical|center_horizontal">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/users"
                                android:layout_margin="10dp"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="App Users"
                                android:layout_margin="10dp"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:layout_gravity="center"
                                android:textColor="@color/purple"
                                android:textSize="15sp"
                                android:textStyle="normal"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        app:layout_row="2"
                        app:layout_column="0"
                        app:layout_gravity="fill"
                        android:clickable="true"
                        android:id="@+id/cleanerReviews"
                        app:layout_rowWeight="1"
                        app:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical|center_horizontal">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/review"
                                android:layout_margin="10dp"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reviews"
                                android:layout_margin="10dp"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:layout_gravity="center"
                                android:textColor="@color/purple"
                                android:textSize="15sp"
                                android:textStyle="normal"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        app:layout_row="2"
                        app:layout_column="1"
                        app:layout_gravity="fill"
                        android:clickable="true"
                        android:id="@+id/cleanerReviewsAll"
                        app:layout_rowWeight="1"
                        app:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical|center_horizontal">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/review"
                                android:layout_margin="10dp"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reviews All"
                                android:layout_margin="10dp"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:layout_gravity="center"
                                android:textColor="@color/purple"
                                android:textSize="15sp"
                                android:textStyle="normal"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        app:layout_row="4"
                        app:layout_column="0"
                        app:layout_gravity="fill"
                        android:clickable="true"
                        android:id="@+id/cleanerAbout"
                        app:layout_rowWeight="1"
                        app:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical|center_horizontal">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/sell"
                                android:layout_margin="10dp"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="About Us"
                                android:layout_margin="10dp"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:layout_gravity="center"
                                android:textColor="@color/purple"
                                android:textSize="15sp"
                                android:textStyle="normal"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        app:layout_row="4"
                        app:layout_column="0"
                        app:layout_gravity="fill"
                        android:clickable="true"
                        android:id="@+id/cleanerAboutUs"
                        app:layout_rowWeight="1"
                        app:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical|center_horizontal">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/about"
                                android:layout_margin="10dp"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="About Us"
                                android:layout_margin="10dp"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:layout_gravity="center"
                                android:textColor="@color/purple"
                                android:textSize="15sp"
                                android:textStyle="normal"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        app:layout_row="4"
                        app:layout_column="1"
                        app:layout_gravity="fill"
                        android:clickable="true"
                        android:id="@+id/cleanerServices"
                        app:layout_rowWeight="1"
                        app:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical|center_horizontal">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/price"
                                android:layout_margin="10dp"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Services"
                                android:layout_margin="10dp"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:layout_gravity="center"
                                android:textColor="@color/purple"
                                android:textSize="15sp"
                                android:textStyle="normal"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.gridlayout.widget.GridLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/logoutBtnC"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="3dp"
        android:background="@android:color/transparent"
        android:foreground="?attr/selectableItemBackground"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="@color/purple"
        tools:ignore="TouchTargetSizeCheck" />
</LinearLayout>